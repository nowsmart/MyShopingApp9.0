@model  MyShopingApp9._0.Models.ViewModels.ProductVM
@{
    ViewData["Title"] = "Products";
}
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Products</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Product"><i class="bi bi-plus-circle"></i> &nbsp; Create new Product</a>
        </div>
    </div>

</div>
<table class="table table-bordered table-striped" id="myTable" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>
                    <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Product" asp-route-id="@product.Id"><i class="bi bi-pencil"></i></a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
